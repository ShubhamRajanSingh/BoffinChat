<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLoginActivity">
    <ImageView
        android:id="@+id/login_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"
        android:src="@mipmap/mainimage" />

    <EditText
        android:id="@+id/phone_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
      android:layout_below="@+id/login_image"
        android:background="@drawable/inputs"
        android:padding="8dp"
        android:hint="Enter your Phone Number with Country Code."
        android:textAllCaps="false"
        android:textSize="15dp"
        android:drawableStart="@drawable/phone"
        android:textStyle="bold">
    </EditText>
    <EditText
        android:id="@+id/phone_verification_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/phone_number_input"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/inputs"
        android:padding="8dp"
        android:hint="Enter Verification Code."
        android:textAllCaps="false"
        android:textSize="15dp"
        android:drawableStart="@drawable/lock"
        android:textStyle="bold"
        android:visibility="invisible">
    </EditText>

    <Button
        android:id="@+id/send_code_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_verification_input"
        android:text="Send Code"
        android:textAllCaps="false"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/button"
        android:textColor="@android:color/background_light"
        android:textSize="19sp"
        android:textStyle="bold">

    </Button>
    <Button
        android:id="@+id/verify_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_verification_input"
        android:text="Verify"
        android:textAllCaps="false"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/button"
        android:textColor="@android:color/background_light"
        android:textSize="19sp"
        android:textStyle="bold"
        android:visibility="invisible">

    </Button>

</RelativeLayout>